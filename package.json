{
  "name": "Alexandria",
  "version": "0.1.0",
  "description": "Learn languages by reading texts.",
  "main": "server.js",
  "scripts": {
    "start": "node build/server/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/server.ts",
    "staging": "cross-env NODE_ENV=staging ts-node-dev src/server.ts",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --collectCoverage",
    "start-docker-postgres": "docker-compose -f postgres.yaml up -d",
    "stop-docker-postgres": "docker-compose -f postgres.yaml down --volumes",
    "pgtest": "npm run start-docker-postgres && npm test && npm run stop-docker-postgres",
    "build:server": "rm -rf build/server && npm run tsc",
    "build:client": "rm -rf build/client && mkdir build/client && cd ../frontend/ && npm run build --prod && cd build && cp -r * ../../backend/build/client",
    "build": "npn run build:server && npm run build:client",
    "deploy": "npm run build && git add . && git commit -m 'new full build' && git push",
    "lint": "eslint --ext .ts .",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Team-Capstone-Europe/project-repo.git"
  },
  "author": "Dana, Eamon, Marc",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Team-Capstone-Europe/project-repo/issues"
  },
  "homepage": "https://github.com/Team-Capstone-Europe/project-repo#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "pg-format": "^1.0.4",
    "react-bootstrap": "^2.0.3",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/pg": "^8.6.1",
    "@types/pg-format": "^1.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.4.3",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tslib": "^2.3.1"
  }
}
